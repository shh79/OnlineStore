<Window x:Class="OnlineStoreWPF.AdminLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OnlineStoreWPF"
        mc:Ignorable="d"
        Title="AdminLogin" Height="260" Width="420" WindowStartupLocation="CenterScreen" AllowsTransparency="True" WindowStyle="None" Icon="img/AdminLogIcon.jpg">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="img/AdminLog.jpg" Stretch="UniformToFill"/>
        </Grid.Background>
        <Button x:Name="Log_button" Content="Login" IsEnabled="False" HorizontalAlignment="Left" VerticalAlignment="Top" Width="90" Margin="145,195,0,0" Click="Login" Background="#FF73AA8A" Height="30"/>
        <Button Content="Back" HorizontalAlignment="Left" VerticalAlignment="Top" Width="90" Margin="33,195,0,0" Click="Back" Background="#FFE5AD8C" Height="30"/>
        <TextBox x:Name="UserNamebox" HorizontalAlignment="Left" Height="30" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="202" Margin="33,73,0,0" FontSize="16" TextChanged="UserNamebox_TextChanged"/>
        <PasswordBox x:Name="PassBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="33,121,0,0" Width="202" Height="30" FontSize="18" PasswordChanged="PCheck"/>





    </Grid>
</Window>
